{
  "id":"marathon-demo",
  "apps":[{
    "id": "mysql",
    "container": {
      "type": "DOCKER",
      "docker": {
        "image": "mysql",
        "network": "BRIDGE",
        "parameters": [{
          "key": "volume-driver",
          "value": "flocker"
        }]
      },
      "volumes":[{
        "containerPath": "/var/lib/mysql",
        "hostPath": "/mysqldemo",
        "mode": "RW"
      }],
      "forcePullImage":true
    },
    "env": {
      "MYSQL_ROOT_PASSWORD": "password"
    },
    "constraints": [
      ["disk", "CLUSTER", "spinning"]
    ],
    "instances": 1,
    "cpus": 0.1,
    "mem": 256
  }]
}